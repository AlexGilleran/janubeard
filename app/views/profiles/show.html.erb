<div class="profile-container">
<div class="heading">
  <p>The Beardometer Has Spoken.</p>
</div>
</header>
<div class="picture">
  <%= image_tag @profile.image_url %>

  <div class="social">
  <!-- Load Facebook SDK for JavaScript -->
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

    <div class="fb-share-button"
      data-size="large"
      data-href=<%= profile_url(@profile) %>
      data-layout="button_count">
    </div>
    <a href="https://twitter.com/share" class="twitter-share-button"
        data-size="large"
        data-text="The Beardometer Has Spoken: I've bearded up for kids with cancer."
        data-url="<%= profile_url(@profile) %>"
        data-hashtags="janubeard"
        data-via="janubeard">Tweet</a>
  </div>
</div>

<div class="bottom-bar">
  <a id="beardify-link" href="/beardometer">
    <%= image_tag "camera_white.png", alt: "take camera snapshot" %>
    Beard me up!
  </a>
</div>

<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
